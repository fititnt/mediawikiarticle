	<authorUrl>www.joomla.org</authorUrl>
	<version>2.5.0</version>
	<description>PLG_CONTENT_MEDIAWIKIARTICLE_XML_DESCRIPTION</description>

	<files>
		<filename plugin="mediawikiarticle">mediawikiarticle.php</filename>
		<filename>index.html</filename>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
                <field name="mediawiki_username"
                       type="textfield">
                </field>
                <field name="mediawiki_password"
                       type="password">
                </field>
                <field name="mediawiki_siteurl"
                       type="textfield">
                </field>
			</fieldset>
		</fields>
	</config>

</extension>
