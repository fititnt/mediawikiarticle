<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content" method="upgrade">
	<name>plg_content_mediawikiarticle</name>
	<author>Joomla! Project</author>
	<creationDate>July 2012</creationDate>
	<copyright>Copyright (C) 2005 - 2012 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>2.5.0</version>
	<description>PLG_CONTENT_MEDIAWIKIARTICLE_XML_DESCRIPTION</description>

	<files>
		<filename plugin="mediawikiarticle">mediawikiarticle.php</filename>
		<filename>index.html</filename>
        <!-- For development, also folder folder -->
		<folder>language</folder>
	</files>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_content_mediawikiarticle.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_content_mediawikiarticle.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="catid"
					   type="category"
					   default=""
					   show_root="true"
					   extension="com_content"
					   label="PLG_CONTENT_MEDIAWIKIARTICLE_CATETORY_LABEL"
					   description="PLG_CONTENT_MEDIAWIKIARTICLE_CATETORY_DESC"
					   />

				<field name="spacer1" type="spacer" hr="true"/>
					   
				<field name="username"
					   type="textfield"
					   default=""
					   label="PLG_CONTENT_MEDIAWIKIARTICLE_USERNAME_LABEL"
					   description="PLG_CONTENT_MEDIAWIKIARTICLE_USERNAME_DESC"
					   />
				<field name="password"
					   type="password"
					   default=""
					   label="PLG_CONTENT_MEDIAWIKIARTICLE_PASSWORD_LABEL"
					   description="PLG_CONTENT_MEDIAWIKIARTICLE_PASSWORD_DESC"
					   />
				<field name="siteurl"
					   type="textfield"
					   default="http://docs.joomla.org"
					   requered="true"
					   label="PLG_CONTENT_MEDIAWIKIARTICLE_SITEURL_LABEL"
					   description="PLG_CONTENT_MEDIAWIKIARTICLE_SITEURL_DESC"
					   />
			</fieldset>
		</fields>
	</config>

</extension>
